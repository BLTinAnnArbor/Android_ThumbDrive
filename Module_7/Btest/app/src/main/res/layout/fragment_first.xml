<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <Button
        android:id="@+id/button_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="To Fragment A"
        app:layout_constraintBottom_toBottomOf="@+id/firstFragImage"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/firstFragImage" />

    <Button
        android:id="@+id/button_first2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="To Fragment B"
        app:layout_constraintBottom_toBottomOf="@+id/firstFragImage2"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/firstFragImage2" />

    <Button
        android:id="@+id/button_first3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="To Fragment C"
        app:layout_constraintBottom_toBottomOf="@+id/firstFragImage3"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/firstFragImage3" />

    <ImageView
        android:id="@+id/firstFragImage"
        android:layout_width="149dp"
        android:layout_height="124dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/android_image_5"
        app:layout_constraintBottom_toTopOf="@+id/firstFragImage2"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/firstFragImage2"
        android:layout_width="149dp"
        android:layout_height="124dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/android_image_6"
        app:layout_constraintBottom_toTopOf="@+id/firstFragImage3"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/firstFragImage" />

    <ImageView
        android:id="@+id/firstFragImage3"
        android:layout_width="149dp"
        android:layout_height="124dp"
        android:layout_marginEnd="32dp"
        android:src="@drawable/android_image_7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintTop_toBottomOf="@+id/firstFragImage2" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>